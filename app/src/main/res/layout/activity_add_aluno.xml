<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAlunoActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/addAluno_editNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addAluno_editEndereco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Endereco"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addAluno_editNome"
        app:layout_constraintStart_toStartOf="@+id/addAluno_editNome"
        app:layout_constraintTop_toBottomOf="@+id/addAluno_editNome" />

    <EditText
        android:id="@+id/addAluno_editTelefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/addAluno_editEndereco"
        app:layout_constraintStart_toStartOf="@+id/addAluno_editEndereco"
        app:layout_constraintTop_toBottomOf="@+id/addAluno_editEndereco" />

    <EditText
        android:id="@+id/addAluno_editSite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Site"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addAluno_editTelefone"
        app:layout_constraintStart_toStartOf="@+id/addAluno_editTelefone"
        app:layout_constraintTop_toBottomOf="@+id/addAluno_editTelefone" />

    <EditText
        android:id="@+id/addAluno_editNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nota"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/addAluno_editSite"
        app:layout_constraintStart_toStartOf="@+id/addAluno_editSite"
        app:layout_constraintTop_toBottomOf="@+id/addAluno_editSite" />

</android.support.constraint.ConstraintLayout>